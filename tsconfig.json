{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "es2021",
    "outDir": "lib",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "newLine": "lf",
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"]
}
